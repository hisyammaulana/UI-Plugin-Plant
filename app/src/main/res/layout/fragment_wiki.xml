                android:id="@+id/btnSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings"
                android:layout_marginLeft="210dp"
                android:layout_gravity="center"/>
        </LinearLayout>

